<h1>Listing offers</h1>

<table>
  <tr>
    <th>Start at</th>
    <th>End at</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @offers.each do |offer| %>
  <tr>
    <td><%= offer.start_at %></td>
    <td><%= offer.end_at %></td>
    <td><%= offer.price %></td>
    <td><%= link_to 'Details', offer %></td>
    <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
    <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

